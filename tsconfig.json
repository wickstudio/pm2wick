{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "skipLibCheck": true,
      "declaration": true
    },
    "include": [
      "lib/**/*.ts",
      "bin/**/*.ts",
      "index.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  